<div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
  <h5>New Comment</h5>
  <div>

    <form id="new-comment">
      <div class="form-group">
        {{input value=author id="author" class="form-control" placeholder="your name"}}
      </div>

      <div class="form-group">
        <label for="body">Comment</label>
        {{textarea rows="10" form="new-comment" value=body id="body" class="form-control" placeholder="your comment"}}
      </div>

      <button {{action 'saveComment'}} class="btn btn-primary form-control">Save</button>
    </form>
  </div>
</div>
