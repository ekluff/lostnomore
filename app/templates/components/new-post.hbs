<div class="container">
  {{#if addNewPost}}
      <h4>Add New Post</h4>
      <div class="container">
        <form id="new-post">
          <div class="form-group">
            <label for="author" class="form-control">Your name</label>
            {{input value=author id="author" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="location" class="form-control">Location</label>
            {{input value=location id="location" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="title" class="form-control">Title</label>
            {{input value=title id="title" class="form-control"}}
          </div>
          <div class="form-group">
            <label for="body" class="form-control">Body</label>
            {{textarea form="new-post" value=body id="body" class="form-control"}}
          </div>
          <button {{action 'save'}} class="btn btn-primary form-control">Save</button>
        </form>
      </div>
  {{else}}
      <button class="btn" {{action 'postFormShow'}} class="btn btn-primary">New Post</button>
  {{/if}}
</div>
